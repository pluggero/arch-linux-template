{
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    "github>pluggero/renovate-config-ansible-galaxy"
  ],
  "automergeType": "pr",
  "packageRules": [
    {
      "matchManagers": ["github-actions", "pip_requirements"],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "enabledManagers": [
    "github-actions",
    "pip_requirements",
    "ansible-galaxy"
  ],
  "ansible-galaxy": {
    "managerFilePatterns": [
      "/^ansible/requirements\\.ya?ml$/"
    ]
  },
  "assignees": [
    "pluggero"
  ]
}
